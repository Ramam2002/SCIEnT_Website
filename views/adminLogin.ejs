<body>
    <form class="login-form" method="post" action="/admin">
        <h1>Admin Login</h1>
        <div class="form-group ">
           <input type="text" class="form-control" placeholder="Username" name="adminName" id="UserName">
           <i class="fa fa-user"></i>
        </div>
        <div class="form-group log-status">
           <input type="password" class="form-control" placeholder="Password" name="adminPassword" id="Passwod">
           <i class="fa fa-lock"></i>
        </div>
        <span><%= msg %></span>
        <button type="submit" class="log-btn" >Log in</button>
     </form>
         

  <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>

    <script  src="js/index_admin.js"></script>

</body>
</html>
